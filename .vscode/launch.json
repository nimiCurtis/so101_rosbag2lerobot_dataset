{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI with config",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/so101_rosbag2lerobot_dataset/cli.py",
            "args": [
                "--config",
                "${workspaceFolder}/config/config.yaml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug CLI with config (short arg)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/so101_rosbag2lerobot_dataset/cli.py",
            "args": [
                "-c",
                "${workspaceFolder}/config/config.yaml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}